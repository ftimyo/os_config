# i3_config file
# Author: Timothy You
#
# Use 'xmodmap' to check control key symbols
# Use 'xmodmap -pke' to check all key symbols
#
set $mod_option Mod1
set $mod_super Mod4
set $monitor DP1
#set $monitor VGA1

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

#default orientation
#<horizontal|vertical|auto>
default_orientation auto

#workspace layout
#<default|stacking|tabbed>
workspace_layout default

#Border style for new windows
#<normal|1pixel|none|pixel>
new_window none
new_float normal

workspace_auto_back_and_forth no
#Focus follows mouse
#focus_follows_mouse	yes|no
focus_follows_mouse	yes

#popup during fullscreen mode
#popup_during_fullscreen smart|ignore|leave_fullscreen
popup_during_fullscreen leave_fullscreen

#use xprop to see class and instance
#add 1 pixel for all xterm window
#for_window [class="XTerm"] border pixel 1

#focus wrapping
force_focus_wrapping yes

#----key bindings------------------------------------

#volume control
##Thinkpad X220 keyboard specific
bindsym XF86AudioMute exec amixer sset Master toggle
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer sset Master 5%-
##Generic Keyboard mixer
bindsym $mod_option+z exec amixer sset Master toggle
bindsym $mod_option+Shift+plus exec amixer sset Master 5%+
bindsym $mod_option+Shift+minus exec amixer sset Master 5%-

#brightness control
##Thinkpad X220 keyboard specific
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
##Generic Keyboard brightness
bindsym $mod_option+Shift+b exec xbacklight -inc 5
bindsym $mod_option+b exec xbacklight -dec 5

#Use Mouse+$mod_option to drag floating windows to their wanted position
floating_modifier $mod_option

#Start a terminal
#bindsym $mod_option+t exec i3-sensible-terminal
bindsym $mod_option+t exec gnome-terminal

#Kill focused window
bindsym $mod_option+Shift+Q kill

#Start dmenu (a program launcher)
bindsym $mod_option+space exec dmenu_run

#Change focus
bindsym $mod_option+h focus left
bindsym $mod_option+j focus down
bindsym $mod_option+k focus up
bindsym $mod_option+l focus right

#Move focused window
bindsym $mod_option+Shift+H move left
bindsym $mod_option+Shift+J move down
bindsym $mod_option+Shift+K move up
bindsym $mod_option+Shift+L move right

#Split in horizontal orientation
bindsym $mod_option+s split h

#Split in vertical orientation
bindsym $mod_option+v split v

#Enter fullscreen mode for the focused container
bindsym $mod_option+f fullscreen

#Change container layout (stacked, tabbed, default)
bindsym $mod_option+Shift+S layout stacking
bindsym $mod_option+Shift+T layout tabbed
bindsym $mod_option+Shift+D layout default

#Toggle tiling / floating
bindsym $mod_option+Shift+w floating toggle

# Change focus between tiling / floating windows
bindsym $mod_option+w focus mode_toggle

# focus the parent container
bindsym $mod_option+p focus parent

# focus the child container
bindsym $mod_option+c focus child


#scratchpad
bindsym	 $mod_option+Shift+N move scratchpad
bindsym  $mod_option+n scratchpad show

# reload the configuration file
bindsym $mod_option+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod_option+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod_option+Shift+E exit
# lock screen
bindsym control+$mod_option+l exec i3lock -n -b -t -i ~/.i3/DarkGreen.png
#bindsym control+$mod_option+l exec i3lock -b -d -c 00ffaa

#----workspace------------------------------------
# switch to workspace
bindsym $mod_option+1 workspace 1
bindsym $mod_option+2 workspace 2
bindsym $mod_option+3 workspace 3
bindsym $mod_option+4 workspace 4
bindsym $mod_option+5 workspace 5
bindsym $mod_option+6 workspace 6
bindsym $mod_option+7 workspace 7
bindsym $mod_option+8 workspace 8
bindsym $mod_option+9 workspace 9
bindsym $mod_option+0 workspace 10

# move focused container to workspace
bindsym $mod_option+Shift+exclam move workspace 1
bindsym $mod_option+Shift+at move workspace 2
bindsym $mod_option+Shift+numbersign move workspace 3
bindsym $mod_option+Shift+dollar move workspace 4
bindsym $mod_option+Shift+percent move workspace 5
bindsym $mod_option+Shift+asciicircum move workspace 6
bindsym $mod_option+Shift+ampersand move workspace 7
bindsym $mod_option+Shift+asterisk move workspace 8
bindsym $mod_option+Shift+parenleft move workspace 9
bindsym $mod_option+Shift+parenright move workspace 10

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
        # more space on its left

bindsym j resize shrink down 10 px or 10 ppt
bindsym Shift+J resize grow   down 10 px or 10 ppt

bindsym k resize shrink up 10 px or 10 ppt
bindsym Shift+K resize grow   up 10 px or 10 ppt

bindsym l resize shrink right 10 px or 10 ppt
bindsym Shift+L resize grow   right 10 px or 10 ppt

bindsym h resize shrink left 10 px or 10 ppt
bindsym Shift+H resize grow   left 10 px or 10 ppt

        # back to normal: Enter or Escape
bindsym Return mode "default"
bindsym Escape mode "default"
}

bindsym $mod_option+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status --config ~/.i3/i3status.conf
		workspace_buttons yes
#		mode hide
#		modifier $mod_option
		position top
}
workspace 1 output $monitor
workspace 2 output $monitor
workspace 3 output $monitor
workspace 4 output $monitor
workspace 5 output $monitor
workspace 6 output $monitor
workspace 7 output $monitor
workspace 8 output $monitor
workspace 9 output $monitor
#exec --no-startup-id xrandr --output $monitor --auto --rotate left --output LVDS1 --right-of $monitor --mode 1366x768
#exec --no-startup-id xrandr --output $monitor --auto --rotate normal --output LVDS1 --right-of $monitor --mode 1366x768
#exec --no-startup-id i3lock -n -b -t -i ~/.i3/linen.png
#exec --no-startup-id i3-msg "workspace 9; exec google-chrome --incognito; workspace 1"
exec --no-startup-id /usr/bin/nm-applet
exec --no-startup-id /usr/bin/gnome-settings-daemon
##may call "dconf write /org/gnome/settings-daemon/plugins/cursor/active false"
##to fix the cursor disappear bug in gnome-settings-daemon
exec --no-startup-id /usr/bin/gnome-keyring-daemon
#exec --no-startup-id /usr/bin/gnome-screensaver
#exec --no-startup-id /usr/bin/dropbox start
exec --no-startup-id /usr/bin/feh --bg-scale ~/.i3/DarkGreen.png
